  const errorMsg = document.getElementById('errorMessage');

  if (sessionStorage.getItem('adminAuth') === 'true') {
    modal?.classList.add('hidden');
    content?.classList.remove('hidden');
    initializeFirebase();
  }

  submitBtn?.addEventListener('click', checkPassword);
  input?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') checkPassword();
  });

  function checkPassword() {
    if (input?.value === PASSWORD) {
      sessionStorage.setItem('adminAuth', 'true');
      modal?.classList.add('hidden');
      content?.classList.remove('hidden');
      errorMsg?.classList.add('hidden');
      initializeFirebase();
    } else {
      errorMsg?.classList.remove('hidden');
      input.value = '';
      input?.focus();
    }
  }

  input?.focus();

  // ========== FIREBASE FUNCTIONS ==========
  
  let groupAPlayers = [];
  let groupAMatches = [];

  async function initializeFirebase() {
    console.log('Inicializando Firebase...');
    loadGroupFromFirebase('A');
  }

  async function loadGroupFromFirebase(group) {
    try {
      console.log(`Cargando grupo ${group}...`);
      
      // Cargar jugadores
      const groupDoc = await getDoc(doc(db, 'groups', `group${group}`));
      
      if (groupDoc.exists()) {
        const data = groupDoc.data();
        console.log('Datos del grupo:', data);
        
        if (group === 'A') {
          groupAPlayers = data.players || [];
          updateStandings();
          updateMatchSelects();
        }
      } else {
        console.log('No existe el grupo en Firebase');
      }

      // Cargar partidos
      const matchesRef = collection(db, 'groups', `group${group}`, 'matches');
      const matchesSnapshot = await getDocs(matchesRef);
      const matches = matchesSnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));

      if (group === 'A') {
        groupAMatches = matches;
        updateMatchHistory();
      }

      // Escuchar cambios en tiempo real - jugadores
      onSnapshot(doc(db, 'groups', `group${group}`), (doc) => {
        if (doc.exists()) {
          const data = doc.data();
          console.log('Cambio detectado en jugadores:', data);
          
          if (group === 'A') {
            groupAPlayers = data.players || [];
            updateStandings();
            updateMatchSelects();
          }
        }
      });

      // Escuchar cambios en tiempo real - partidos
      onSnapshot(collection(db, 'groups', `group${group}`, 'matches'), (snapshot) => {
        const matches = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
        console.log('Cambio detectado en partidos:', matches);
        
        if (group === 'A') {
          groupAMatches = matches;
          updateStandings();
          updateMatchHistory();
        }
      });

    } catch (error) {
      console.error('Error cargando grupo:', error);
    }
  }

  // Mapeo de IDs internos a IDs de osu!
  const PLAYER_OSU_IDS = {
    '1': 4881251,   // Lasseh
    '2': 2546001,   // Intercambing
    '3': 11786864,  // siiphs
    '4': 19998548,  // suntanCTM
    '5': 18036760,  // paxyh
    '6': 5339515,   // Mathi
    '7': 13058814,  // Renscereol
    '8': 5386106,   // Deruz
    '9': 6315784,   // Dylson
    '10': 5298487,  // MonkiDonki
    '11': 6265645,  // Azubux1
    '12': 1603962,  // Touche
    '13': 4057299,  // NagaZer
    '14': 11207004, // tfge
    '15': 18946207, // nekore
    '16': 6194830,  // Shiny Froakie
    '17': null,     // ???
  };

  // Funci√≥n para obtener la foto del jugador
  function getPlayerPhoto(id) {
    const osuId = PLAYER_OSU_IDS[id];
    
    if (!osuId) {
      return '/mascota.png'; // Fallback para jugadores sin osu!
    }
    
    return `https://a.ppy.sh/${osuId}`;
  }

  // ========== GRUPO A ==========

  document.getElementById('saveGroupA')?.addEventListener('click', async () => {
  const p1 = document.getElementById('playerA1').value;
  const p2 = document.getElementById('playerA2').value;
  const p3 = document.getElementById('playerA3').value;
  const p4 = document.getElementById('playerA4').value;

  if (!p1 || !p2 || !p3 || !p4) {
    alert('Debes seleccionar los 4 jugadores');
    return;
  }

  if (new Set([p1, p2, p3, p4]).size !== 4) {
    alert('No puedes seleccionar el mismo jugador dos veces');
    return;
  }

  const players = [
    { 
      id: p1, 
      name: getPlayerName(p1), 
      photo: getPlayerPhoto(p1),  // ‚Üê Agregar foto
      played: 0, 
      wins: 0, 
      losses: 0, 
      points: 0 
    },
    { 
      id: p2, 
      name: getPlayerName(p2), 
      photo: getPlayerPhoto(p2),  // ‚Üê Agregar foto
      played: 0, 
      wins: 0, 
      losses: 0, 
      points: 0 
    },
    { 
      id: p3, 
      name: getPlayerName(p3), 
      photo: getPlayerPhoto(p3),  // ‚Üê Agregar foto
      played: 0, 
      wins: 0, 
      losses: 0, 
      points: 0 
    },
    { 
      id: p4, 
      name: getPlayerName(p4), 
      photo: getPlayerPhoto(p4),  // ‚Üê Agregar foto
      played: 0, 
      wins: 0, 
      losses: 0, 
      points: 0 
    }
  ];

  try {
    await setDoc(doc(db, 'groups', 'groupA'), {
      players: players,
      updatedAt: Date.now()
    });

    console.log('Grupo guardado en Firebase:', players);
    alert('Grupo A guardado correctamente en Firebase');
  } catch (error) {
    console.error('Error guardando grupo:', error);
    alert('Error al guardar: ' + error.message);
  }
});

  function getPlayerName(id) {
    const select = document.getElementById('playerA1');
    const option = select.querySelector(`option[value="${id}"]`);
    return option?.textContent || 'Unknown';
  }

  function updateStandings() {
    const tbody = document.getElementById('standingsA');
    if (!tbody) return;

    console.log('Actualizando tabla con jugadores:', groupAPlayers);

    if (groupAPlayers.length === 0) {
      tbody.innerHTML = '<tr><td colspan="6" class="p-4 text-center text-gray-500">Selecciona los jugadores del grupo</td></tr>';
      return;
    }

    // Calcular estad√≠sticas
    groupAPlayers.forEach(player => {
      player.played = 0;
      player.wins = 0;
      player.losses = 0;
      player.points = 0;
    });

    groupAMatches.forEach((match) => {
      const p1 = groupAPlayers.find(p => p.id === match.player1);
      const p2 = groupAPlayers.find(p => p.id === match.player2);
      
      if (p1 && p2) {
        p1.played++;
        p2.played++;
        
        if (match.winner === match.player1) {
          p1.wins++;
          p1.points += 3;
          p2.losses++;
        } else {
          p2.wins++;
          p2.points += 3;
          p1.losses++;
        }
      }
    });

    const sorted = [...groupAPlayers].sort((a, b) => b.points - a.points);

    tbody.innerHTML = sorted.map((player, index) => `
      <tr class="border-b hover:bg-gray-50">
        <td class="p-3 font-bold">${index + 1}</td>
        <td class="p-3 font-semibold">${player.name}</td>
        <td class="p-3 text-center">${player.played}</td>
        <td class="p-3 text-center text-green-600 font-bold">${player.wins}</td>
        <td class="p-3 text-center text-red-600 font-bold">${player.losses}</td>
        <td class="p-3 text-center font-bold" style="color: var(--color-accent)">${player.points}</td>
      </tr>
    `).join('');
  }

  function updateMatchSelects() {
    const select1 = document.getElementById('matchPlayer1A');
    const select2 = document.getElementById('matchPlayer2A');
    
    if (!select1 || !select2) return;

    const options = groupAPlayers.map(p => 
      `<option value="${p.id}">${p.name}</option>`
    ).join('');

    select1.innerHTML = '<option value="">Jugador 1</option>' + options;
    select2.innerHTML = '<option value="">Jugador 2</option>' + options;
  }

  document.getElementById('addMatchA')?.addEventListener('click', async () => {
    const p1 = document.getElementById('matchPlayer1A').value;
    const p2 = document.getElementById('matchPlayer2A').value;
    const game = document.getElementById('matchGameA').value;
    const winner = document.getElementById('matchWinnerA').value;

    if (!p1 || !p2 || !game || !winner) {
      alert('Completa todos los campos');
      return;
    }

    if (p1 === p2) {
      alert('Los jugadores deben ser diferentes');
      return;
    }

    const match = {
      player1: p1,
      player2: p2,
      game: game,
      winner: winner === '1' ? p1 : p2,
      timestamp: Date.now()
    };

    try {
      await addDoc(collection(db, 'groups', 'groupA', 'matches'), match);
      
      document.getElementById('matchGameA').value = '';
      document.getElementById('matchWinnerA').value = '';
      
      console.log('Partido registrado:', match);
    } catch (error) {
      console.error('Error registrando partido:', error);
      alert('Error al registrar partido: ' + error.message);
    }
  });

  function updateMatchHistory() {
    const container = document.getElementById('matchHistoryA');
    if (!container) return;

    if (groupAMatches.length === 0) {
      container.innerHTML = '<p class="text-gray-500 text-center">No hay partidos registrados</p>';
      return;
    }

    container.innerHTML = groupAMatches.slice().reverse().map((match) => {
      const p1Name = groupAPlayers.find(p => p.id === match.player1)?.name || 'Unknown';
      const p2Name = groupAPlayers.find(p => p.id === match.player2)?.name || 'Unknown';
      const winnerName = groupAPlayers.find(p => p.id === match.winner)?.name || 'Unknown';
      
      return `
        <div class="bg-[var(--color-background)] p-4 rounded-lg">
          <div class="flex justify-between items-center flex-wrap gap-2">
            <div class="font-semibold">
              <span class="${match.winner === match.player1 ? 'text-green-600 font-bold' : ''}">${p1Name}</span>
              vs
              <span class="${match.winner === match.player2 ? 'text-green-600 font-bold' : ''}">${p2Name}</span>
            </div>
            <div class="text-sm">
              <span class="bg-[var(--color-accent)] text-white px-3 py-1 rounded-full">${match.game}</span>
            </div>
          </div>
          <div class="text-sm text-gray-600 mt-2">
            Ganador: <span class="font-bold text-green-600">${winnerName}</span>
          </div>
        </div>
      `;
    }).join('');
  }

  document.getElementById('resetGroupA')?.addEventListener('click', async () => {
    if (!confirm('¬øEst√°s seguro? Esto borrar√° todos los jugadores y partidos del Grupo A.')) {
      return;
    }

    try {
      await setDoc(doc(db, 'groups', 'groupA'), {
        players: [],
        updatedAt: Date.now()
      });

      const matchesRef = collection(db, 'groups', 'groupA', 'matches');
      const matchesSnapshot = await getDocs(matchesRef);
      
      const deletePromises = matchesSnapshot.docs.map(doc => deleteDoc(doc.ref));
      await Promise.all(deletePromises);
      
      document.getElementById('playerA1').value = '';
      document.getElementById('playerA2').value = '';
      document.getElementById('playerA3').value = '';
      document.getElementById('playerA4').value = '';
      
      alert('Grupo A reseteado correctamente');
    } catch (error) {
      console.error('Error reseteando grupo:', error);
      alert('Error al resetear: ' + error.message);
    }
  });

  // Cambio de tabs
  document.querySelectorAll('.group-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      const group = tab.getAttribute('data-group');
      
      document.querySelectorAll('.group-tab').forEach(t => {
        t.classList.remove('active', 'bg-[var(--color-accent)]', 'text-white');
        t.classList.add('bg-gray-300', 'text-gray-700');
      });
      tab.classList.add('active', 'bg-[var(--color-accent)]', 'text-white');
      tab.classList.remove('bg-gray-300', 'text-gray-700');
      
      document.querySelectorAll('.group-content').forEach(content => {
        content.classList.add('hidden');
      });
      document.querySelector(`.group-content[data-group="${group}"]`)?.classList.remove('hidden');
    });
  });
</script>

