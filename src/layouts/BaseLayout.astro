---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

const base = import.meta.env.BASE_URL;

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "Torre del Mago Invitacional",
  description = "Torneo invitacional 1v1 de varios juegos organizados por y para los miembros de Torre del Mago",
  image = "ogbg.png"
} = Astro.props;

const siteUrl = "https://codecambing.github.io/TDM-webpage/";
const fullImageUrl = image.startsWith('http') 
  ? image 
  : `${siteUrl}${image}`;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <link rel="icon" type="image/png" href={`${base}mascota.png`}>
  
  <meta property="og:type" content="website">
  <meta property="og:url" content={siteUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={fullImageUrl}>
  <meta property="og:site_name" content="Torre del Mago">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  
  <meta name="theme-color" content="#6b4eff">
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={fullImageUrl}>
</head>

<body>
  <Navbar />

  <main class="min-h-screen">
    <slot />
  </main>

  <footer class="bg-[var(--color-navbar)] mt-24">
  <div class="max-w-7xl mx-auto px-6 py-12 grid grid-cols-1 md:grid-cols-3 gap-8 text-sm">

    <div>
      <h3 class="font-[Cinzel] text-lg mb-3"></h3>
      <p>Organizado por Torre del Mago</p>
      <p>Diseño y desarrollo realizado por Intercambing</p>
    </div>

    <div>
      <h3 class="font-[Cinzel] text-lg mb-3">Información</h3>
      <ul class="space-y-2">
        <li><a href="/spreadsheet" class="hover:text-[var(--color-accent)]">Spreadsheet</a></li>
        <li><a href="/staff" class="hover:text-[var(--color-accent)]">Staff</a></li>
        <li><a href="/rules" class="hover:text-[var(--color-accent)]">Reglas</a></li>
      </ul>
    </div>

    <div>
      <h3 class="font-[Cinzel] text-lg mb-3">Redes</h3>
      <ul class="space-y-2">
        <li><a href="https://x.com/TDMInvitational" class="hover:text-[var(--color-accent)]">Twitter</a></li>
        <li><a href="https://www.twitch.tv/mathi" class="hover:text-[var(--color-accent)]">Twitch</a></li>
        <li><a href="#" class="hover:text-[var(--color-accent)]">Forum Post</a></li>
      </ul>
    </div>

  </div>

  <div class="border-t border-black/10 text-center py-4 text-xs">
    © 2026 Torre del Mago · Todos los derechos reservados
  </div>
</footer>
</body>
</html>